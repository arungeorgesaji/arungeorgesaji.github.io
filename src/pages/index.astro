---
import Layout from '../layouts/Layout.astro';
import Banner from '../components/Banner.astro'; 

const title = "Arun George Saji";
---

<Layout title={title}>
  <Banner />
  <br><br><br><br><br>
  <img src="https://media2.giphy.com/media/v1.Y2lkPTc5MGI3NjExc3M4ZHdrcnBnNGtyMmU4a3ZtaDJ6NWExYnIxcTQ2YWlza3lpeHk4OSZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9Zw/xUA7bdpLxQhsSQdyog/giphy.webp" alt="Animated GIF" class="profile-gif fade-in"/>
  <h1 class="fade-in"><center>Hello I am Arun George Saji</center></h1>
  <h2 class="fade-in"><center>Welcome to my portfolio! Explore my work and skills.</center></h2>
</Layout>

<style>
  .profile-gif {
    border-radius: 50%;
    width: 300px;  
    height: 300px; 
    object-fit: cover;
    display: block;
    margin: 0 auto;
    transition: transform 0.3s ease, box-shadow 0.3s ease; 
  }

  .profile-gif:hover {
    transform: scale(1.05);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
  }

  .fade-in {
    opacity: 0;
    transform: translateY(200px);
    animation: fadeIn 3s forwards;
    text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.7); 
  }

  @keyframes fadeIn {
    0% {
      opacity: 0;
      transform: translateY(200px);
    }
    50% {
      opacity: 0.8;
      transform: translateY(50px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

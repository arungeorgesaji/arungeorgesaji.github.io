---
import Layout from '../layouts/Layout.astro';
import Banner from '../components/Banner.astro'; 
import Home from '../components/Home.astro'; 
import About from '../components/About.astro'; 
import Projects from '../components/Projects.astro'; 
import Blog from '../components/Blog.astro'; 
import Contact from '../components/Contact.astro'; 
import '../styles/index.css'; 
import { Image } from 'astro:assets';
import programming_gif from '../assets/programming.gif';
const title = "Arun George Saji";
---

<Layout title={title}>
  <div class="scroll-container">
    <Banner />
    <Home />
    <About />
    <Projects />
    <Blog />
    <Contact />
  </div>
</Layout>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const classNames = ["profile-container", "profile-gif", "about-container", "projects-container", "blog-header", "blog-posts-grid", "read-more-btn", "contact-container", "email-button", "social-button"];

    const elements = classNames.flatMap(className => Array.from(document.querySelectorAll(`.${className}`)));
    const viewportHeight = window.innerHeight;

    const handleScroll = () => {
      elements.forEach((element) => {
        const rect = element.getBoundingClientRect();

        if (rect.top < viewportHeight && rect.bottom > 0) {
          element.classList.add("visible");
        } else {
          element.classList.remove("visible");
        }
      });
    };

    window.addEventListener("scroll", handleScroll);
    handleScroll();
  });
</script>

